{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('stats_user', {'id': user.id}) }}">{{ user.Name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="1">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
